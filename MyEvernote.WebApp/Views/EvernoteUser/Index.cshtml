@model IEnumerable<MyEvernote.Entities.EvernoteUser>

@{
    ViewBag.Title = "Kullanıcılar";
}

<div class="container">
    <div class="row">
        <div class="col-lg-12 my-4">

            <h2>@ViewBag.Title</h2>

            <p>
                <a href="@Url.Action("Create", "EvernoteUser")" class="btn btn-primary">
                    <span class="fa fa-plus"></span>
                    Yeni
                </a>
            </p>
            <hr />
            <table class="table table-bordered table-hover table-responsive">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Surname)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Username)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Email)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Password)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.IsActive)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.IsAdmin)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.CreatedOn)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ModifiedOn)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ModifiedUsername)
                        </th>
                        <th></th>
                    </tr>
                </thead>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Surname)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Username)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Email)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Password)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.IsActive)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.IsAdmin)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CreatedOn)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ModifiedOn)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ModifiedUsername)
                        </td>
                        <td>
                            <a href="@Url.Action("Edit", "EvernoteUser", new { id = @item.Id })" class="btn btn-warning btn-sm" title="Düzenle">
                                <span class="fa fa-edit"></span>
                            </a>
                            <a href="@Url.Action("Details", "EvernoteUser", new { id = @item.Id })" class="btn btn-info btn-sm" title="Datay">
                                <span class="fa fa-search"></span>
                            </a>
                            <a href="@Url.Action("Delete", "EvernoteUser", new { id = @item.Id })" class="btn btn-danger btn-sm" title="Sil">
                                <span class="fa fa-trash"></span>
                            </a>
                        </td>
                    </tr>
                }

            </table>
        </div>
    </div>
</div>
