@model IEnumerable<MyEvernote.Entities.Note>

@{
    ViewBag.Title = "Notlar";
}

<div class="container">
    <div class="row">
        <div class="col-lg-12 my-4">
            <h2>@ViewBag.Title</h2>
            <p>
                <a href="@Url.Action("Create", "Note")" class="btn btn-primary">
                    <span class="fa fa-plus"></span>
                    Yeni
                </a>
            </p>
            <table class="table table-hover table-bordered">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Category.Title)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Title)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Text)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.IsDraft)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.LikeCount)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.CreatedOn)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ModifiedOn)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ModifiedUsername)
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Category.Title)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Title)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Text)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.IsDraft)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.LikeCount)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CreatedOn)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ModifiedOn)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ModifiedUsername)
                        </td>
                        <td width="200">
                            <button class="btn btn-sm btn-success" data-target="#modal_comment" data-toggle="modal" data-note-id="@item.Id">
                                <span class="fa fa-comment"></span>
                            </button>
                            <a href="@Url.Action("Edit", "Note", new { id = @item.Id })" class="btn btn-warning btn-sm" title="Düzenle">
                                <span class="fa fa-edit"></span>
                            </a>
                            <a href="@Url.Action("Details", "Note", new { id = @item.Id })" class="btn btn-info btn-sm" title="Datay">
                                <span class="fa fa-search"></span>
                            </a>
                            <a href="@Url.Action("Delete", "Note", new { id = @item.Id })" class="btn btn-danger btn-sm" title="Sil">
                                <span class="fa fa-trash"></span>
                            </a>
                        </td>
                    </tr>
                }

            </table>
        </div>
    </div>
</div>


@Bootstrap.ModalPopup(id: "modal_comment", title: "Yorumlar")

<script src="~/Scripts/comment.js"></script>
