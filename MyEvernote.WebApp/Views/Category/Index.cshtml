@model IEnumerable<MyEvernote.Entities.Category>

@{
    ViewBag.Title = "Kategoriler";
}

<div class="container">
    <div class="row">
        <div class="col-lg-12 my-4">

            <h2>@ViewBag.Title</h2>

            <p>
                <a href="@Url.Action("Create", "Category")" class="btn btn-primary">
                    <span class="fa fa-plus"></span>
                    Yeni
                </a>
            </p>
            <hr />
            <table class="table table-bordered table-hover table-light">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Title)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Description)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.CreatedOn)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ModifiedOn)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ModifiedUsername)
                        </th>
                        <th></th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Title)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Description)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.CreatedOn)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ModifiedOn)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ModifiedUsername)
                            </td>
                            <td>
                                <a href="@Url.Action("Edit", "Category", new { id = @item.Id })" class="btn btn-warning btn-sm" title="Düzenle">
                                    <span class="fa fa-edit"></span>
                                </a>
                                <a href="@Url.Action("Details", "Category", new { id = @item.Id })" class="btn btn-info btn-sm" title="Datay">
                                    <span class="fa fa-search"></span>
                                </a>
                                <a href="@Url.Action("Delete", "Category", new { id = @item.Id })" class="btn btn-danger btn-sm" title="Sil">
                                    <span class="fa fa-trash"></span>
                                </a>
                            </td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>
    </div>
</div>
