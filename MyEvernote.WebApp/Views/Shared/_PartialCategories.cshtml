@using MyEvernote.BusinessLayer
@using MyEvernote.Entities
@{
    CategoryManager categoryManager = new CategoryManager();
    var categories = categoryManager.List();
}
<div class="list-group my-4">
    <a href="#" class="list-group-item active" onclick="return false;">Kategoriler</a>
    <a href="@Url.Action("Index", "Home")" class="list-group-item"><i class="fa fa-arrow-right"></i> Tümü</a>
    @foreach (var category in categories)
    {
        <a href="@Url.Action("ByCategory","Home", new { id = category.Id })" title="@category.Description" class="list-group-item">
            <i class="fa fa-arrow-right"></i> @category.Title
            <span class="badge badge-dark pull-right">@category.Notes.Count</span>
        </a>
    }
</div>