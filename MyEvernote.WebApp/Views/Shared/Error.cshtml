@model MyEvernote.WebApp.ViewModels.ErrorViewModel

@{
    ViewBag.Title = Model.Title;
}


<div class="container">
    <div class="row">
        <div class="col-lg-6 offset-3">
            <div class="card card-register mx-auto mt-5">
                <div class="card-header bg-danger text-light">@Model.Header</div>
                <div class="card-body">
                    <div class="alert alert-danger">
                        <h2><i class="fa fa-remove"></i> @Model.Title</h2>
                        <hr />
                        <p>
                            @if (Model != null)
                            {
                                foreach (var error in Model.Items)
                                {
                                    @error.Message<br />
                                }
                            }
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@{
    string js = string.Empty;

    if (Model.IsRedirecting)
    {
        js = "setTimeout(function () { window.location = '" + Model.RedirectingUrl + "'; }, " + Model.RedirectingTimeout + ");";
    }
}

<script>
    $(function () {
        @Html.Raw(js)
    });
</script>