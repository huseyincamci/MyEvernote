@model MyEvernote.Entities.EvernoteUser
@{
    ViewBag.Title = "Profil Düzenle";
}

<link href="~/Content/Validation.css" rel="stylesheet" />

<div class="container my-4">
    <div class="row">
        <div class="col-lg-12">
            <h2>@ViewBag.Title</h2>
            <hr />
        </div>
    </div>


    @using (Html.BeginForm("EditProfile", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {<div class="row">
        <div class="col-md-4">
            <img src="~/Images/@Model.ProfileImageFileName" alt="" class="img-thumbnail" width="128" height="128" />
            @Html.HiddenFor(x => x.ProfileImageFileName)
            <br />
            <br />
            <input type="file" class="form-control" name="ProfileImage" width="128" height="128" value="" />
            <span class="fa fa-info-circle text-info">&nbsp;</span>
            <span class="text-info"><i>Lütfen jpg, jpeg ya da png formatı kullanın.</i></span>
        </div>
        <div class="col-md-8">

            @Html.ValidationSummary(false)
            @Html.HiddenFor(x => x.Id)

            <div class="form-group row">
                @Html.LabelFor(x => x.Name, new { @class = "col-2 col-form-label " })
                <div class="col-10">
                    @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
                </div>
            </div>

            <div class="form-group row">
                @Html.LabelFor(x => x.Surname, new { @class = "col-2 col-form-label" })
                <div class="col-10">
                    @Html.TextBoxFor(x => x.Surname, new { @class = "form-control" })
                </div>
            </div>

            <div class="form-group row">
                @Html.LabelFor(x => x.Username, new { @class = "col-2 col-form-label" })
                <div class="col-10">
                    @Html.TextBoxFor(x => x.Username, new { @class = "form-control" })
                </div>
            </div>

            <div class="form-group row">
                @Html.LabelFor(x => x.Password, new { @class = "col-2 col-form-label" })
                <div class="col-10">
                    @Html.TextBoxFor(x => x.Password, new { @class = "form-control", type = "password" })
                </div>
            </div>

            <div class="form-group row">
                @Html.LabelFor(x => x.Email, new { @class = "col-2 col-form-label" })
                <div class="col-10">
                    @Html.TextBoxFor(x => x.Email, new { @class = "form-control" })
                </div>
            </div>

            <div class="form-group row">
                <div class="col-10 offset-2">
                    <input type="submit" class="btn btn-success" value="Kaydet" />
                    @Html.ActionLink("İptal", "ShowProfile", "Home", null, new { @class = "btn btn-secondary" })
                </div>
            </div>
        </div>
    </div>
    }
</div>