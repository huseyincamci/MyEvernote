@model MyEvernote.Entities.EvernoteUser
@{
    ViewBag.Title = "Profiliniz";
}

<div class="container my-4">
    <div class="row">
        <div class="col-lg-12">
            <h2>@ViewBag.Title</h2>
            <hr />
        </div>
    </div>

    <div class="row">
        <div class="col-md-2">
            <img src="~/Images/@Model.ProfileImageFileName" alt="" class="img-thumbnail" width="128" height="128" />
        </div>
        <div class="col-md-8">
            <h3>@(Model.Name + " " + Model.Surname)</h3> <br />
            <h6><strong>Username: </strong>@Model.Username</h6>
            <h6><strong>Email: </strong>@Model.Email</h6> <br />
            <h6><a href="#">More..</a></h6>
        </div>
        <div class="col-md-2">
            <div class="btn-group" role="group">
                <button id="btnGroupDrop1" type="button" class="btn btn-info dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    <span class="fa fa-cog"></span>
                    Seçenekler
                </button>
                <div class="dropdown-menu" aria-labelledby="btnGroupDrop1">
                    <a class="dropdown-item" href="@Url.Action("EditProfile","Home")">
                        <span class="fa fa-edit"></span> Düzenle
                    </a>
                    <a class="dropdown-item" href="@Url.Action("DeleteProfile","Home")" onclick="return confirm('Bu hesabı silmek istediğinize emin misiniz?')">
                        <span class="fa fa-trash"></span> Sil
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>