@model MyEvernote.Entities.ViewModels.LoginViewModel
@{
    ViewBag.Title = "Giriş Sayfası";
}

<link href="~/Content/sb-admin.min.css" rel="stylesheet" />
<link href="~/Content/Validation.css" rel="stylesheet" />

<div class="container">
    <div class="card card-login  mx-auto mt-5">
        <div class="card-header bg-success text-light">Giriş Formu</div>
        <div class="card-body">
            @Html.ValidationSummary(false)

            @if (ViewBag.SetLink != null)
            {
                <a href="@ViewBag.SetLink" class="btn btn-primary">Activate</a>
            }
            @using (Html.BeginForm())
            {
                <div class="form-group">
                    @Html.LabelFor(x => x.Username)
                    @Html.TextBoxFor(x => x.Username, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(x => x.Password)
                    @Html.TextBoxFor(x => x.Password, new { @class = "form-control", type = "password" })
                </div>
                <button class="btn btn-success btn-block" type="submit">Giriş</button>
            }
            <div class="text-center">
                <a class="d-block small mt-3" href="@Url.Action("Register","Home")">Kayıt Ol</a>
            </div>
        </div>
    </div>
</div>